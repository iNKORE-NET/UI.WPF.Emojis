<Window x:Class="Tiny.TinyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:clr="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Tiny"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Opacity="0.7"
        MouseLeftButtonDown="OnMouseLeftButtonDown"
        Title="Emoji.Wpf Tiny" Width="600" Height="200">

    <Window.Resources>
        <clr:String x:Key="SampleText">Hi👨🏻‍👩🏿‍👧🏽‍👦🏽‍👦🏿lol</clr:String>
    </Window.Resources>

    <emoji:TextBlock FontSize="120" Text="{StaticResource SampleText}"
                     FontFamily="Segoe UI Emoji, Segoe UI, Arial" TextWrapping="Wrap"
                     VerticalAlignment="Center" HorizontalAlignment="Center"/>
</Window>
